{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "outjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
